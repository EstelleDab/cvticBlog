{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="display-4">{{ post.title }}</h1>
    <p class="lead">{{ post.content|raw }}</p>
    <div class="mb-3">
        {% for tag in post.tags %}
            <span class="badge bg-warning">{{ tag.name }}</span>
        {% endfor %}
    </div>
    <div class="mb-3">
        <strong>Catégorie :</strong> {{ post.category }}
    </div>
    <div class="mb-3">
        <strong>Publié le :</strong> {{ post.createdAt|date('d/M/Y h:s') }}
    </div>

    <h3>Commentaires</h3>
    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.content) }}
        </div>
        <button type="submit" class="btn btn-primary">Envoyer</button>
    {{ form_end(form) }}

    <div class="mt-4">
        {% for comment in post.comments %}
            <div class="card mb-3">
                <div class="card-body">
                    <p>{{ comment.content }}</p>
                    <div class="text-muted">
                        <small>Posté par {{ comment.user.username }} le {{ comment.createdAt|date('d/M/Y h:s') }}</small>
                    </div>
                    <a href="{{ path('comment_report', { 'id': comment.id }) }}" class="btn btn-warning btn-sm mt-2">Signaler</a>
                </div>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('app_front_actualites') }}" class="btn btn-secondary mt-3">Retour aux actualités</a>
</div>
{% endblock %}